{
  "name": "chatmesh-backend",
  "version": "1.0.0",
  "description": "ChatMesh Backend - Multi-platform messaging aggregation system",
  "module": "server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --bun run --watch back/index.ts",
    "start": "bun --bun run back/index.ts",
    "build": "bun --bun build index.ts --outdir ./dist --target bun",
    "db:migrate": "bunx drizzle-kit generate --dialect sqlite --schema back/db/schema.ts --out back/drizzle"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@socket.io/bun-engine": "^0.0.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "email-validator": "^2.0.4",
    "hono": "^4.9.6",
    "mailgun.js": "^12.0.3",
    "node-telegram-bot-api": "^0.66.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node-telegram-bot-api": "^0.64.11",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.2.21"
  },
  "keywords": [
    "messaging",
    "chat",
    "telegram",
    "zalo",
    "backend",
    "api",
    "websocket"
  ]
}
